---
const { subtitle, title, desc } = Astro.props;
---
<section class="lg:px-6">
  <div class="grid max-w-screen-xl px-4 py-8 mx-auto lg:gap-8 xl:gap-0 lg:py-16 lg:grid-cols-12">
    <div class="hidden place-self-center lg:mt-0 lg:col-span-5 lg:flex">
      <img src="/assets/img/HeroMonitor.png" alt="mockup">
    </div> 
    <div class="mr-auto place-self-center lg:col-span-7">
      <h3 class="font-open-sans lg:text-2xl md:text-lg text-md font-light mb-2">
        {subtitle}
      </h3>
      <h1 class="font-inter lg:text-6xl md:text-4xl text-3xl font-extrabold text-red-600 mb-2">
        {title}
      </h1>
      <h2 class="font-open-sans lg:text-2xl md:text-lg text-md font-semibold text-gray-400 mb-2">
        {desc}
      </h2>
      <div class="md:w-1/2 grid gap-4 grid-cols-1 sm:grid-cols-2 mt-12">
        <button
          type="button"
          class="text-white bg-red-600 hover:bg-red-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-semibold rounded-lg text-sm px-5 py-2.5 sm:text-md sm:px-8 sm:py-3 text-center mr-3 md:mr-0 dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-blue-800 font-open-sans sm:block"
        >
          Hire Us
        </button>
          <button
          type="button"
          class="text-red-700 bg-white hover:bg-gray-100 focus:ring-4 focus:outline-none focus:ring-blue-300 font-semibold rounded-lg text-sm px-5 py-2.5 sm:text-md sm:px-8 sm:py-3 text-center mr-3 md:mr-0 dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-blue-800 font-open-sans sm:block border-red-700 border-2"
        >
          Learn More
        </button>
      </div>
    </div>               
  </div>
</section>