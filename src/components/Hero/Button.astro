---
const { type, text } = Astro.props;
---
{type === "red" ? 
  <button
    type="button"
    class="text-white bg-red-600 hover:bg-red-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-semibold rounded-lg text-sm px-5 py-2.5 sm:text-md sm:px-8 sm:py-3 text-center mr-3 md:mr-0 dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-blue-800 font-open-sans sm:block"
  >
    {text}
  </button> :
  <button
    type="button"
    class="text-red-700 bg-white hover:bg-gray-100 focus:ring-4 focus:outline-none focus:ring-blue-300 font-semibold rounded-lg text-sm px-5 py-2.5 sm:text-md sm:px-8 sm:py-3 text-center mr-3 md:mr-0 dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-blue-800 font-open-sans sm:block border-red-700 border-2"
  >
    {text}
  </button>
}